#!/bin/bash

DIR="$HOME/work/ipinfo-tools"

source "$DIR/lib/colors.sh"
source "$DIR/lib/functions.sh"

if [ -t 0 ]; then

ip="$1"
flags="$2"


if [[ "$ip" == "" ]]
then
    echo_error "No IP specified..."
    exit
fi

log "Queried for $ip"

if [[ "$flags" != ""  ]]
then
    info "$ip"| jq -r "$flags" 
else
    info "$ip"| jq -C "$flags"
fi
else
    while read -r line ; do
        ip=$(echo $line | cut -d " " -f 2)
flags="$1"


if [[ "$ip" == "" ]]
then
    echo_error "No IP specified..."
    exit
fi

log "Queried for $ip"

if [[ "$flags" != ""  ]]
then
    info "$ip"| jq -r "$flags" 
else
    info "$ip"| jq -C "$flags"
fi
    done
fi






